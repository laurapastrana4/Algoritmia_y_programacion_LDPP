Algoritmo Ejercicio_16_gasolina
	// Entrada
	Escribir "Ingrese la cantidad de galones: "
	leer cantidad_galones
	// caja negra
	precio_litro=50000
	galones_a_litros=3.785
	litros=cantidad_galones*galones_a_litros
	monto_total=litros*precio_litro
	// salida
	Escribir " El monto total a pagar es de: " , monto_total
	
FinAlgoritmo